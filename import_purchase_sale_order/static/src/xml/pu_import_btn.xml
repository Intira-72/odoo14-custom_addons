<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

  <t t-extend="ListView.buttons">
    <t t-jquery="button.o_list_export_xlsx" t-operation="after">
        <t t-if="widget.modelName=='purchase.order'">
            <button type="button" class="btn btn-primary btn-default o_button_pu_import">Import Purchase Order</button>
        </t>
        <t t-if="widget.modelName=='sale.order'">
            <button type="button" class="btn btn-primary btn-default o_button_sale_import">Import Sale Order</button>
        </t>
    </t>
  </t>
</templates>